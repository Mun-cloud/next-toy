model Post {
    id        Int       @id @default(autoincrement())
    title     String
    content   String?
    published Boolean   @default(false)
    author    User      @relation(fields: [authorId], references: [id])
    authorId  Int
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    comments  Comment[]

    @@index([authorId])
}
